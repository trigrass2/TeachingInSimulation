<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.cas.sim.tis.view.control.imp.Title?>
<?import com.cas.sim.tis.svg.SVGGlyph?>
<?import javafx.scene.control.Tooltip?>


<fx:root type="VBox" styleClass="library" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141">
	<children>
		<HBox spacing="10">
			<Title fx:id="name" />
			<HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
				<children>
					<Button styleClass="img-btn" mnemonicParsing="false" onAction="#add">
						<graphic>
							<SVGGlyph name="iconfont.svg.add" size="20" fill="#f6a23f" />
						</graphic>
						<tooltip>
							<Tooltip text="%button.add"/>
						</tooltip>
					</Button>
					<Button styleClass="img-btn" mnemonicParsing="false" onAction="#publish">
						<graphic>
							<SVGGlyph name="iconfont.svg.publish" size="20" fill="#f6a23f" />
						</graphic>
						<tooltip>
							<Tooltip text="%button.publish"/>
						</tooltip>
					</Button>
					<Button styleClass="img-btn" mnemonicParsing="false" onAction="#delete">
						<graphic>
							<SVGGlyph name="iconfont.svg.close" size="15" fill="#f6a23f" />
						</graphic>
						<tooltip>
							<Tooltip text="%button.delete"/>
						</tooltip>
					</Button>
				</children>
			</HBox>
		</HBox>
		<VBox fx:id="questions" spacing="10">
			<padding>
				<Insets bottom="10" left="10" right="10" top="10" />
			</padding>
		</VBox>
	</children>
</fx:root>
